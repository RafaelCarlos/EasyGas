<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_numero_cartao_itens_add_cartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número do Cartão de Crédito" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_validade_cartao_itens_add_cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginTop="6dp"
        android:text="Validade" />

    <EditText
        android:id="@+id/et_data_validade_itens_dialog_add_cartao"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_validade_cartao_itens_add_cartao"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="MM / AA"
        android:inputType="date" />

    <TextView
        android:id="@+id/tv_codigo_seguranca_itens_dialog_add_cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_validade_cartao_itens_add_cartao"
        android:text="Código de Segurança" />

    <EditText
        android:id="@+id/et_cvc_itens_dialog_add_cartao"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/et_data_validade_itens_dialog_add_cartao"
        android:ems="10"
        android:hint="CVC"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_texto_informativo_itens_dialog_add_cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_cvc_itens_dialog_add_cartao"
        android:layout_marginTop="12dp"
        android:text="3 últimos dígitos no verso do cartão" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_confirmar_itens_add_cartao"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_texto_informativo_itens_dialog_add_cartao"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        android:onClick="confimar"
        android:shadowColor="@color/colorAccent"
        android:text="Confirmar"
        android:textColor="?attr/colorPrimary" />
</RelativeLayout>