<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codigo.rafael.easygas.fragments.FeedbackFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_titulo_tela_feedback"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Ajude-nos a lhe oferecer um serviço 5 estrelas"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rg_feedback_tela_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_elogio_tela_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Elogio"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_sugestao_tela_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="Sugestão"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_critica_tela_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="Melhoria"
            android:textColor="#000000" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_conteudo_tela_feedback"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#000000" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_enviar_tela_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="?attr/colorPrimary"
        android:shadowColor="@color/colorAccent"
        android:text="Enviar"
        android:textColor="#ffffff" />

</LinearLayout>
