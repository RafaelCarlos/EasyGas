<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codigo.rafael.easygas.fragments.MenuFragment">

    <TextView
        android:id="@+id/tv_saldo_fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="Saldo da carteira"
        android:textColor="@color/abc_primary_text_material_dark" />

    <TextView
        android:id="@+id/tv_carteira_fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_saldo_fragment_menu"
        android:background="@color/colorPrimary"
        android:text="R$: 0,00"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="50dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/ll_list_view_fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_carteira_fragment_menu"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">


        <ListView
            android:id="@+id/lv_menu_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:scrollbars="vertical" />
    </LinearLayout>
</RelativeLayout>
